<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ratingBar"
            android:layout_gravity="center"
            android:textSize="30sp"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ratingBarBigSize"
            android:layout_marginTop="30dp"
            android:textSize="17sp"/>
        <androidx.appcompat.widget.AppCompatRatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar"
            android:progressTint="#BF360C"
            android:progressBackgroundTint="#F8BBD0"
            android:numStars="7"


            android:isIndicator="false"
            android:stepSize="0.1"
            android:secondaryProgressTint="#B2EBF2"

            android:rating="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ratingBarMiddleSize"
            android:layout_marginTop="30dp"
            android:textSize="17sp"/>
        <androidx.appcompat.widget.AppCompatRatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:numStars="10"
            android:progressTint="#FDD835"
            android:rating="3" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ratingBarSmallSize"
            android:layout_marginTop="30dp"
            android:textSize="18sp"/>
        <androidx.appcompat.widget.AppCompatRatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:numStars="22"
            android:isIndicator="false"
            android:rating="3" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <Button
            android:id="@+id/rb_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="세부기능"/>
    </LinearLayout>



</LinearLayout>